{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "jsx": "react",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "api/*": ["./src/api/*"],
      "api": ["./src/api"],
      "components": ["./src/components"],
      "components/*": ["./src/components/*"]
    }
  },
  "include": ["src/**/*", "config/**/*"],
  "exclude": ["node_modules"],
  "typings": ["./config/globals.ts"]
}
